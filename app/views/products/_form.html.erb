<div class="container" >
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1">
			<h1><%= form_title %></h1>
			
			<% if @product.errors.any? %>
				<div class="alert alert-danger">
					<ul>
						<% @product.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			<%= form_for(@product, html: {multipar: true, class: "dropzone", id: "dz-space"}) do |f| %>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del productos" %>
				</div>
				<div class="form-group">
					<%= f.url_field :url, class: "form-control input-lg", placeholder: "Ingresa la url del productos" %>
				</div>
				<div class="form-group" >
					<%= f.text_area :description, class: "ckeditor", placeholder: "Ingresa la descripcion del productos" %>
				</div>
				<div  >
					<div class="fallback">
						<%= f.file_field :image %>
					</div>
				</div>
				<div>
					<%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
