<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3">
			<h1>Sign up</h1>
			<%= form_for @user do |f| %>
				<div class="form-group">
					<%= f.email_field :email, class: "form-control input-lg", placeholder: "Ingresa tu email" %>
				</div>
				<div class="form-group">
					<%= f.password_field :password, class: "form-control input-lg", placeholder: "Ingresa una contraseÃ±a" %>
				</div>
				<div class="form-group">
					<%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa tu nombre de usuario" %>
				</div>
				<div class="input-group input-group-lg">
					<span class="input-group-addon" id="basic-addon1">@</span>
					<%= f.text_field :twitter_handle, class: "form-control input-lg", placeholder: "Ingresa tu usuario de twitter" %>
				</div>
				<div class="actions">
					<%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
				</div>
			<% end %>
		</div>
	</div>
</div>